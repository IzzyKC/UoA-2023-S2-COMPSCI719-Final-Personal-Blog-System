<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    {{#if title}}
    <title>{{title}}</title>
    {{else}}
    <title>Default title.</title>
    {{/if}}

    <link href="./css/login.css" rel="stylesheet" >
    <link href="./css/article.css" rel="stylesheet" >
    <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet"> 
    <script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
    
</head>

<body>
    <div class="container">
        <div class="nav">
            <a href={{#if user}} "./allArticles?sortby=desc" {{else}} "./?sortby=desc" {{/if}}><img src="./images/system/home.png"></a>
            <a href="./yourArticles?sortby=desc"><img src="./images/system/blog.png"></a> 
            <a href="./yourFavorites?sortby=desc"><img src="./images/system/favorites.png"></a> 
            
            {{#if user}}
                <a href="./updateAccount"><img class="user-icon" src="{{user.icon}}"></a>
            {{/if}}

            {{#if user}}
            <a href="./logout"><img src="./images/system/logout.png"></a>
            {{else}}
            <a href="./login"><img src="./images/system/login.png"></a>
            {{/if}}

        </div>

        {{#if toastMessage}}
        <p>{{toastMessage}}</p>
        {{/if}}
        {{{body}}}
    </div>
     
</body>

</html>